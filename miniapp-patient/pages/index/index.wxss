.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.role-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.video-section {
  width: 100%;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.video-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.video {
  width: 100%;
  height: 400rpx;
  background: #000;
  border-radius: 8rpx;
}

.switch-btn {
  margin-top: 20rpx;
  width: 80%;
  background: #1677ff;
  color: #fff;
  border-radius: 8rpx;
}

.status-text {
  margin-top: 30rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 1.8;
}

.status-text text {
  display: block;
  word-break: break-all;
}
